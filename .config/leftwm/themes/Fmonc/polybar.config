[colors]
bg = #2e3440
fg = #e5e9f0

# lightgray
lightgray = #8c8b94

# polar night
pn-darker = #3b4252 pn-light = #4c566a

# snow storm
sn-dark = #d8dee9
sn-light = #eceff4

# frost
f-mint = #8fbcbb
f-bright = #88c0d0
f-washed = #81a1c1
f-dark = #5e81ac

# aurora
a-green = #a3be8c
a-magenta = #b48ead
a-orange = #d08770
a-red = #bf616a

[settings]
pseudo-transparency = true

[bar/mainbar]
monitor = ${env:MONITOR}
width = 99.6%
height = 28
offset-x= 0.21%
offset-y= 0.4%
radius = 7.0
fixed-center = true
bottom = false

background = ${colors.bg}
foreground = ${colors.fg}

separator = "|"
separator-foreground = ${colors.pn-light}

modules-left = ewmh xwindow
modules-center = time
modules-right = network volume cpu memory date
font-0 = FiraCode Nerd Font:style=Bold:size=11;3
font-1 = FontAwesome:size=13;2

[module/xwindow]
type = internal/xwindow
label = " %title% "
label-maxlen = 65
format-foreground = ${colors.lightgray}

[module/ewmh]
type = internal/xworkspaces
label-active = " %name% "
label-active-background = ${colors.f-bright}
label-active-foreground = ${colors.pn-darker}
label-occupied = " %name% "
label-occupied-background = ${colors.pn-light}
label-urgent = " %name% "
label-urgent-background = ${colors.a-orange}
label-urgent-foreground = ${colors.win-urgent-fg}
label-empty = " %name% "
label-empty-foreground = ${colors.foreground}

[module/date]
type = internal/date
date = " %a, %b %d "
format-foreground = ${colors.a-magenta}

[module/time]
type = internal/date
date = " %H:%M "
date-alt = " %H:%M:%S "
interval = 1.0
;format-prefix = " "

[module/cpu]
type = internal/cpu
interval = 3.0
label = " CPU:%percentage:2%% "
label-foreground = ${colors.f-bright}

[module/memory]
type = internal/memory
interval = 3.0
label = " RAM: %mb_used% "
label-foreground = ${colors.f-washed}

[module/volume]
type = internal/pulseaudio
label-volume = " VOL: %percentage:2%% "
label-volume-foreground = ${colors.f-mint}
label-muted = " MUTED   "
label-muted-foreground = ${colors.a-red}

[module/network]
type = internal/network
interface = wlan0
interface-type = wireless
unknown-as-up = true
interval = 1.0

label-disconnected = " DISCONNECTED "
label-disconnected-foreground = ${colors.a-red}
format-disconnected = <label-disconnected>

label-connected = "  %essid% "
label-connected-foreground = ${colors.a-orange}
format-connected = <label-connected>

;[module/sys-bluetoothctl]
;type = custom/script
;exec = ~/Public/Scripts/sys-bluetoothctl.sh
;tail = true
;click-left = ~/Public/Scripts/sys-bluetoothctl.sh --toggle &
